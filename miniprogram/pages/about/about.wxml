<!--pages/about/about.wxml-->
<view class="container">
  <view class="user-info">
    <view class="user-info-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <image class="user-info-vip" src="/images/vip.png" mode="aspectFit"></image>
    <view class="user-info-name">
      <open-data type="userNickName"></open-data>
    </view>
  </view>

  <view class="section">
    <view class="section-top">
      <text class="section-text">商品订单</text>
    </view>
    <view class="section-bottom">
      <view class="section-bottom-item" bindtap="topdd">
        <image src="/images/pdd.png"  mode="aspectFit"/>
        <text>拼多多</text>
      </view>
    </view>
  </view>

  <view class="section">
    <view class="section-top">
      <text class="section-text">有趣小程序</text>
    </view>
    <view class="section-bottom">
      <view class="section-bottom-item" bindtap="toOtherMiniPrograms" data-index="{{index}}" wx:for="{{otherMiniPrograms}}">
        <image src="{{item.icon}}"  mode="aspectFit"/>
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>
</view>