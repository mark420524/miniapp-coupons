<van-search
  value="{{ value }}"
  shape="round"
  background="#0bb9b6"
  placeholder="请输入搜索关键词"
  bind:search="onSearch"
/>
<view wx:if="{{tabs.length >0}}">
    <van-tabs bind:change="onChange" active="{{ activeTab }}" swipeable>
        <van-tab wx:for="{{tabs}}" data-id="{{item._id}}" title="{{item.title}}">
            <view class="container" wx:for="{{item.goodsList}}" wx:for-item="v">
              <van-card 
                  price="{{v.lowest_price}}"
                  origin-price="{{v.price}}"
                  desc="{{v.short_desc}}"
                  title="{{v.sku_name}}"
                  thumb-link="{{v.duanzhi}}"
                  thumb="{{ v.imageUrl }}"
                  lazy-load="ture"
                >
                  <view slot="footer">
                    <van-button bind:click="copyLink" data-url="{{v.duanzhi}}" size="small">点我复制</van-button>
                    
                  </view>
                </van-card>               
            </view>
        </van-tab>
    </van-tabs>
</view>
<view wx:else class="loading">
    <van-loading size="30px">加载最多的商品优惠券...</van-loading>
</view>
